unit Pairs;

interface

uses
  Sysutils, customers, vehicles, Math;

  type
  Pair = Class

  private
  pID:integer;
  pve : vearray;
  pline: customer;

  published
    constructor Create(ID:integer; ve:vearray; line:customer);
    property ID: integer read pID write pID;
    property ve: vearray read pve write pve;
    property line: customer read pline write pline;

  End;

 parray = array of pair;

 Trio= Class

  private
  pID:integer;
  pve : vearray;
  pline1,pline2: customer;

  published
    constructor Create(ID:integer; ve:vearray; line1,line2:customer);
    property ID: integer read pID write pID;
    property ve: vearray read pve write pve;
    property line1: customer read pline1 write pline1;
    property line2: customer read pline2 write pline2;
 End;

implementation

constructor Pair.Create(ID: Integer; ve: vearray; line: Customer);
begin
    self.ID := ID;
    self.ve:= ve;
    self.line:= line;
end;

constructor Trio.Create(ID: Integer; ve: vearray; line1: Customer; line2: Customer);
begin
    self.ID := ID;
    self.ve:= ve;
    self.line1:= line1;
    self.line2 := line2;
end;
end.
